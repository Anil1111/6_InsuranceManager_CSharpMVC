@using FinalWorkshop.Models
@model IEnumerable<FinalWorkshop.Models.VehiclePolicyModel>

@{
    ViewData["Title"] = "Index";
}

<h2>All Policies</h2>

<div class="row">
    <div class="btn-group btn-breadcrumb">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page"><a href="~/main/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">All Policies</li>
            </ol>
        </nav>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Insurance Type", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.ActionLink("Start Date", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                @Html.ActionLink("End Date", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                Vehicle
            </th>
            <th>
                Customer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if ((DateTime.Now - item.EndTime).TotalDays > 7)
            {
                var color = "green";

                <tr >
                    <td style="background-color: @color">
                        <b> @Html.DisplayFor(modelItem => item.Risk)</b>
                    </td>
                    <td style="background-color: @color">
                        <b>@Html.DisplayFor(modelItem => item.StartTime)</b>
                    </td>
                    <td style="background-color: @color">
                        <b>@Html.DisplayFor(modelItem => item.EndTime)</b>
                    </td>
                    <td style="background-color: @color">
                        <b>@Html.DisplayFor(modelItem => item.VehiclePolicyVehicle.RegistrationNumber)</b>
                    </td>
                    <td style="background-color: @color">
                        <b>@Html.DisplayFor(model => item.CustomerVehiclePolicy.CompanyName)</b>
                    </td>
                    <td>
                        <b>  <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |</b>
                        <b> <a asp-action="Details" asp-route-id="@item.ID">Details</a> |</b>
                        <b> <a asp-action="Delete" asp-route-id="@item.ID">Delete</a></b>
                    </td>
                </tr>

            }
            else
            {
                var color = "red";

                <tr>
                    <td style="background-color: @color">
                        <b> @Html.DisplayFor(modelItem => item.Risk)</b>
                    </td>
                    <td style="background-color: @color">
                        <b>@Html.DisplayFor(modelItem => item.StartTime)</b>
                    </td>
                    <td style="background-color: @color">
                        <b>@Html.DisplayFor(modelItem => item.EndTime)</b>
                    </td>
                    <td style="background-color: @color">
                        <b>@Html.DisplayFor(modelItem => item.VehiclePolicyVehicle.RegistrationNumber)</b>
                    </td>
                    <td style="background-color: @color">
                        <b>@Html.DisplayFor(model => item.CustomerVehiclePolicy.CompanyName)</b>
                    </td>
                    <td>
                        <b>  <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |</b>
                        <b> <a asp-action="Details" asp-route-id="@item.ID">Details</a> |</b>
                        <b> <a asp-action="Delete" asp-route-id="@item.ID">Delete</a></b>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
