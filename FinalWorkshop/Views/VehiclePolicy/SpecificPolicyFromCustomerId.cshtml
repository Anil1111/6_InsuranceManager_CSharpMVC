@model IEnumerable<FinalWorkshop.Models.VehiclePolicyModel>

@{
    ViewData["Title"] = "Index";
}

<h2>
    Policies of client: @ViewBag.CustomerName
</h2>

<div class="row">
    <div class="btn-group btn-breadcrumb">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page"><a href="~/main/">Home</a></li>
                <li class="breadcrumb-item" aria-current="page"><a href="~/customer/">All Customers</a></li>
                <li class="breadcrumb-item active" aria-current="page">Policies of Customer @ViewBag.CustomerName</li>
            </ol>
        </nav>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Insurance Type")
            </th>
            <th>
                @Html.DisplayName("Start Date")
            </th>
            <th>
                @Html.DisplayName("End Date")
            </th>
            <th>
                @Html.DisplayName("Vehicle")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Risk)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehiclePolicyVehicle.RegistrationNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Customer" asp-action="Index">Back to List</a>