@model FinalWorkshop.Models.VehicleModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div class="row">
    <div class="btn-group btn-breadcrumb">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page"><a href="~/main/">Home</a></li>
                <li class="breadcrumb-item" aria-current="page"><a href="~/vehicle/">All Vehicles</a></li>
                <li class="breadcrumb-item active" aria-current="page">Details</li>
            </ol>
        </nav>
    </div>
</div>

<div>
    <h4>@Model.RegistrationNumber</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Registration Number")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt>
            @Html.DisplayName("Type")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt>
            @Html.DisplayName("Brand")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CarBrand)
        </dd>
        <dt>
            @Html.DisplayName("Model")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CarModel)
        </dd>
        <dt>
            @Html.DisplayName("Company Name")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerVehicle.CompanyName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
