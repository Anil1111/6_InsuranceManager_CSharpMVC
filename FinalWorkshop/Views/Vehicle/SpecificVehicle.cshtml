@model IEnumerable<FinalWorkshop.Models.VehicleModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Vehicles of Customer: @ViewBag.CustomerName</h2>

<div class="row">
    <div class="btn-group btn-breadcrumb">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page"><a href="~/main/">Home</a></li>
                <li class="breadcrumb-item" aria-current="page"><a href="~/customer/">All Customers</a></li>
                <li class="breadcrumb-item active" aria-current="page">Vehicles of Customer @ViewBag.CustomerName</li>
            </ol>
        </nav>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Registration Number
            </th>
            <th>
                Type
            </th>
            <th>
                Brand
            </th>
            <th>
                Model
            </th>
            <th>
                Customer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel)
            </td>
            <td>
                @Html.DisplayFor(model => item.CustomerVehicle.CompanyName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-controller="VehiclePolicy" asp-action="SpecificPolicy" asp-route-id="@item.ID">Policies</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Customer" asp-action="Index">Back to List</a>